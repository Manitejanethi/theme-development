{{ 'custom-testimonials.css' | asset_url | stylesheet_tag }}
<script src={{ 'custom-component-splide.js' | asset_url }} defer></script>


{% style %}
    .custom-testimonials--{{ section.id }}{
        background-color: {{ section.settings.background-color }}
        padding-top:{{ section.settings.padding_top | divided_by:2 }}px;
        padding-bottom:{{ section.settings.padding_bottom | divided_by:2 }}px;
    }
    @media screen and (min-width:749px){
        .custom-testimonials--{{ section.id }}{
            padding-top:{{ section.settings.padding_top }}px;
            padding-bottom:{{ section.settings.padding_bottom }}px;
        }
    } 
{% endstyle %}

{% liquid
    assign type = section.settings.slide_aniamtion
    assign arrows = section.settings.show_arrows
    assign pagination = section.settings.show_pagination
    assign autoplay = section.settings.auto_play
    assign auto_play_duration = section.settings.auto_play_duration
%}

{% capture options %}  
{
    "type" : "{{ type }}",
    "arrows": {{ arrows }},
    "pagination":{{ pagination }},
    "autoplay" : {{ autoplay }},
    "interval" : {{ auto_play_duration }},
    "focus": 0,
    "perPage": 2,  
    "perMove": 1,  
    "breakpoints": {
        "749": {
            "perPage": 1
        }
    }
}
{% endcapture %}


<div class="custom-testimonials page-width custom-testimonials--{{ section.id }}">
    <div class="custom-testimonials--container">
        {%- if section.blocks.first.settings.main-image != blank  -%}
            <div class="custom-testimonials--img-container">
                <img src="{{ section.blocks.first.settings.main-image | image_url }}" height="auto" width="auto" class="custom-testimonials--img" id="mainImage"/>
            </div>
        {%- endif -%}
        <div class="custom-testimonials--slide-container">
            {%- if section.settings.heading != blank -%}
                <h2 class="custom-testimonials--heading">{{ section.settings.heading }}</h2>
            {%- endif -%}
            {%- if section.settings.description != blank -%}
                <p class="custom-testimonials--description">{{ section.settings.description }}</p>
            {%- endif -%}
            <splide-component class="splide" data-options='{{ options }}'>
                <div class="splide__track">
                    <ul class="splide__list">
                        {% for block in section.blocks %}
                            <li class="splide__slide custom-testimonials" data-image="{{ block.settings.main-image | image_url }}" data-activecolor="{{ block.settings.active-background }}" data-cardcolor="{{ block.settings.card-background }}">
                                <div class="custom-testimonials--slide">
                                    {%- if block.settings.testmonial-text != blank -%}
                                        <p>"{{ block.settings.testmonial-text }}"</p>
                                    {%- endif -%}
                                    <div class="custom-testimonials--authour-container">
                                        {%- if block.settings.authour-image -%}
                                            <img src="{{ block.settings.authour-image | image_url }}" height="auto" width="auto"/>
                                        {%- endif -%}
                                        <div class="custom-testimonials--authour-text">
                                            {%- if block.settings.authour-name != blank -%}
                                                <h3>{{ block.settings.authour-name }}</h3>
                                            {%- endif -%}
                                            {%- if block.settings.author-title != blank -%}
                                                <p>{{ block.settings.author-title }}</p>
                                            {%- endif -%}
                                        </div>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </splide-component>
        </div>
    </div>
    
</div>






{% schema %}
    {
        "name": "custom-testimonials",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "header",
                "content": "Section level customizations"
            },
            {
                "type": "color",
                "id": "background-color",
                "label": "Background color",
                "default": "#FFFFF5"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Testimonials"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description",
                "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
            },
            {
                "type": "header",
                "content": "Slider options"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": false
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1,
                "max": 5,
                "step": 1,
                "unit": "sec",
                "label": "Autoplay duration",
                "default": 2
            },
            {
                "type": "header",
                "content": "Animation options"
            },
            {
                "type": "select",
                "id": "slide_animation",
                "label": "Slider animation",
                "options": [
                    {
                    "value": "fade",
                    "label": "Fade"
                    },
                    {
                    "value": "slide",
                    "label": "Slide"
                    },
                    {
                    "value": "loop",
                    "label": "Loop"
                    }
                ],
                "default": "slide"
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "color",
                        "id": "active-background",
                        "label": "Background color for Active Card",
                        "default": "#F6FFC2"                       
                    },
                    {
                        "type": "color",
                        "id": "card-background",
                        "label": "Background color for  Card",
                        "default": "#ffffff"
                    },
                    {
                        "type": "text",
                        "id": "testmonial-text",
                        "label": "Testimonial text",
                        "default": "Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque"
                    },
                    {
                        "type": "image_picker",
                        "id": "authour-image",
                        "label": "Authour-image"
                    },
                    {
                        "type": "text",
                        "id": "authour-name",
                        "label": "Author name",
                        "default": "Mr. john d0e"
                    },
                    {
                        "type": "text",
                        "id": "author-title",
                        "label": "Author Title",
                        "default": "clients"
                    },
                    {
                        "type": "image_picker",
                        "id": "main-image",
                        "label": "Active main image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "custom-testimonials",
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
