{{ 'custom-hotspot-slider.css' | asset_url | stylesheet_tag }}

<script src="{{ 'custom-splide.js' | asset_url  }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  {% for block in section.blocks %}
    .custom-hotspot-slider--hotspot-{{ forloop.index }}{
        position: absolute;
        top: {{block.settings.y-axis}}%;
        left: {{block.settings.x-axis}}%;
    }
  .custom-hotspot-slider .product-tag-circle-top{
      position: absolute;
      width: 15px;
      height: 15px;
      background: #FFFFFF;
      z-index: 9;
      border-radius: 100%;
      display: block;
  }
  
.custom-hotspot-slider .product-tag-circle-top:before {
      position: absolute;
      content: "";
      border-radius: 100%;
      transition: all .4s;
      border: 15px solid #ffffff80;
      width: 36px;
      height: 36px;
      left: -10px;
      z-index: 8;
      top: -10px;
  }
  {% endfor %}
  {% for product in section.settings.product_list %}
  .rating-{{ forloop.index }}:before {
    content: "\2605\2605\2605\2605\2605";
    background: linear-gradient(90deg, #FFAA47 calc({{product.metafields.custom.customer_rating}}/5 * 100%), #E1E1E1 calc({{product.metafields.custom.customer_rating}}/5 * 100%));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    }
    .custom-hotspot-slider--slide .rating-{{ forloop.index }} {
        font-size: 2rem;
        display:block;
    }
    {% endfor %}
{%- endstyle -%} 

{% capture options %}  
{
    "perPage": 1,
    "pagination":false,
    "perMove": 1
}
{% endcapture %}

<div class="custom-hotspot-slider section-{{ section.id }}-padding page-width">
    {%- if section.settings.heading != blank -%}
        <h2 class="custom-hotspot-slider--heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="custom-hotspot-slider--container">
        <div class="custom-hotspot-slider--hotspot-container">
            {%- if section.settings.background-image != blank -%}
                <img src="{{ section.settings.background-image | image_url }}" height="auto" width="auto" class="custom-hotspot-slider--background-image"/>
            {%- endif -%}
            {%- for block in section.blocks -%}
                {% assign product = block.settings.hotspot-product %}
                    <div class="custom-hotspot-slider--hotspot-{{ forloop.index }} custom-hotspot-slider--hotspot">
                        <div class="product-tag-circle-top"></div>
                        <div class="custom-hotspot-slider--card">
                            {%- if product.featured_image != blank -%}
                                <img src="{{ product.featured_image | image_url }}" height="auto" width="auto" class="custom-hotspot-slider--card-image"/>
                            {%- endif -%}
                            <div class="custom-hotspot-slider--card-info">
                                {%- if product.title != blank -%}
                                    <h2 class="custom-hotspot-slider--card-title">{{ product.title | truncate:20 }}</h2>
                                {%- endif -%}
                                <div class="custom-hotspot-slider--card-pricecontainer">
                                    {%- if product.compare_at_price != blank -%}
                                        <p class="custom-hotspot-slider--card-compareprice">${{product.compare_at_price | money_without_currency }}</p>
                                    {%- endif -%}
                                    {%- if product.price != blank -%}
                                        <p class="custom-hotspot-slider--card-price">${{product.price | money_without_currency }}</p>
                                    {%- endif -%}
                                </div>
                                {%- if block.settings.add-to-cart -%}
                                    <button class="custom-hotspot-slider--card-button" data-product="{{ product.variants.first.id }}">Add to bag</button>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
            {%- endfor -%}
        </div>
        <div class="custom-hotspot-slider--slide-container">
            <custom-splide class="splide" data-options='{{ options }}'>
                <div class="splide__track">
                  <ul class="splide__list ">
                    {% for product in section.settings.product_list %}
                        <li class="splide__slide">
                            <div class="custom-hotspot-slider--slide">
                                <img src="{{ product.featured_image | image_url }}" height="auto" width="auto" class="custom-hotspot-slider--slide-image"/>
                                <div class="custom-hotspot-slider--slide-info">
                                    <p class="custom-hotspot-slider--slide-vender">{{ product.vendor }}</p>
                                    <p  class="custom-hotspot-slider--slide-title">{{ product.title }}</p>
                                    <div class="rating-{{ forloop.index }}"></div>
                                    <div class="custom-hotspot-slider--slide-prices">
                                        <p class="custom-hotspot-slider--slide-compareprice">{{product.compare_at_price | money_without_currency }}</p>
                                        <p class="custom-hotspot-slider--slide-price">${{product.price | money_without_currency }}</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                  </ul>
                </div>
              </custom-splide>
        </div>
    </div>
</div>



{% schema %}
    {
        "name": "Custom hotspot slider",
        "class": "section",
        "settings": [
             {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Shop the look"
             },
             {
                "type": "product_list",
                "id": "product_list",
                "label": "Products",
                "limit": 12
              },
             {
                "type": "image_picker",
                "id": "background-image",
                "label": "Image"
             },
             {
                "type": "header",
                "content": "Section padding"
              },
              {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Padding top",
                "default": 36
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Padding bottom",
                "default": 36
              }
        ],
        "blocks": [
            {
                "type": "hotspot",
                "name": "hotspot",
                "settings": [
                    {
                        "type": "product",
                        "id": "hotspot-product",
                        "label": "Hotspot product"
                    },
                    {
                        "type": "range",
                        "id": "x-axis",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "label": "Distance from left",
                        "default": 20
                    },
                    {
                        "type": "range",
                        "id": "y-axis",
                        "min": 0,
                        "max": 100,
                        "step": 1,
                        "label": "Distance from top",
                        "default": 20
                    },
                    {
                        "type": "checkbox",
                        "id": "add-to-cart",
                        "label": "Add to cart button",
                        "default": true
                    }
                ]
            }
        ],
        "presets": [
            {
              "name": "Custom hotspot slider",
              "blocks": [
                {
                    "type": "hotspot"
                },
                {
                    "type": "hotspot"
                },
                {
                    "type": "hotspot"
                }
              ]
            }
        ]   
    }
{% endschema %}
