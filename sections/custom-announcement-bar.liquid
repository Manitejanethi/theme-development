{{ "custom-announcement-bar.css" | asset_url | stylesheet_tag }}

{% style %}
    .custom-slideshow--{{ section.id }}{
        padding-top:{{ section.settings.padding_top | divided_by:2 }}px;
        padding-bottom:{{ section.settings.padding_bottom | divided_by:2 }}px;
    }
    .custom-slide{
        padding-top:5px;
        text-align:center;
        color:#ffffff;
        font-size:calc(1.1*13px)
    }
    .splide{
        max-width:500px;
        margin:0 auto;
    }
    .splide__arrow{
        background:transparent;
    }
    .splide__arrow svg{
        fill:#ffffff;
        height:10px;
        width:10px;
    }

    @media screen and (min-width:749px){
        .custom-slideshow--{{ section.id }}{
            padding-top:{{ section.settings.padding_top }}px;
            padding-bottom:{{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<div class="custom-slideshow custom-slideshow--{{ section.id }}" id="customSlideshow">
    <div class="splide">
        <div class="splide__track">
            <ul class="splide__list">
                {% for block in section.blocks %}
                    <li class="splide__slide custom-slide" data-bg-color="{{ block.settings.color }}">{{ block.settings.announcement }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var splide = new Splide('.splide', {
        type   : 'loop',
        autoplay: {{ section.settings.auto_play }},
        interval: {{ section.settings.auto_play_duration }} * 1000, 
        pagination: {{ section.settings.show_pagination }},
        arrows: {{ section.settings.show_arrows }},
      }).mount();
      
      updateSplideBackgroundColor(splide);

      splide.on('moved', function () {
          updateSplideBackgroundColor(splide);
      });
  
      function updateSplideBackgroundColor(splide) {
          var activeSlide = splide.Components.Elements.list.children[splide.index];
          var backgroundColor = activeSlide.getAttribute('data-bg-color');
          let customSlideshow = document.getElementById("customSlideshow");
          customSlideshow.style.backgroundColor = backgroundColor;
      }

    });
</script>

{% schema %}
    {
        "name": "custom-announcement-bar",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "header",
                "content": "Slider options"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": true
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1,
                "max": 5,
                "step": 1,
                "unit": "sec",
                "label": "Autoplay duration",
                "default": 4
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "header",
                        "content": "Text customization"
                    },
                    {
                        "type": "text",
                        "id": "announcement",
                        "label": "Pre announcement",
                        "default": "Free shipping all orders over $60"
                    },
                    {
                        "type": "color",
                        "id": "color",
                        "label": "Background color",
                        "default": "#ffffff"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "custom-announcement-bar",
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
