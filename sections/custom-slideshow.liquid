{% schema %}
    {
        "name": "custom-slideshow",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "header",
                "content": "Slider options"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": false
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1000,
                "max": 5000,
                "step": 1000,
                "unit": "sec",
                "label": "Autoplay duration",
                "default": 2000
            },
            {
                "type": "header",
                "content": "Animation options"
            },
            {
                "type": "select",
                "id": "slide_animation",
                "label": "Slider animation",
                "options": [
                    {
                    "value": "fade",
                    "label": "Fade"
                    },
                    {
                    "value": "slide",
                    "label": "Slide"
                    },
                    {
                    "value": "loop",
                    "label": "Loop"
                    }
                ],
                "default": "slide"
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "header",
                        "content": "Media options"
                    },
                    {
                        "type": "image_picker",
                        "id": "desktop_image",
                        "label": "Desktop Image",
                        "info": "Recommended size: 1360 X 633 px"
                    },
                    {
                        "type": "image_picker",
                        "id": "mobile_image",
                        "label": "Mobile Image",
                        "info": "Recommended size: 360 X 282 px"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom slideshow"
            }
        ]
    }
{% endschema %}
