{{ "custom-slideshow.css" | asset_url | stylesheet_tag }}

{% style %}
    .custom-slideshow--{{ section.id }}{
        padding-top:{{ section.settings.padding_top | divided_by:2 }}px;
        padding-bottom:{{ section.settings.padding_bottom | divided_by:2 }}px;
    }
    @media screen and (min-width:749px){
        .custom-slideshow--{{ section.id }}{
            padding-top:{{ section.settings.padding_top }}px;
            padding-bottom:{{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<div class="custom-slideshow custom-slideshow-wrapper page-width custom-slideshow--{{ section.id }}">
    hello
</div>

{% schema %}
    {
        "name": "custom-slideshow",
        "tag": "section",
        "class": "section",
        "settings": [
            {
                "type": "header",
                "content": "Slider options"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": false
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1000,
                "max": 5000,
                "step": 1000,
                "unit": "sec",
                "label": "Autoplay duration",
                "default": 2000
            },
            {
                "type": "header",
                "content": "Animation options"
            },
            {
                "type": "select",
                "id": "slide_animation",
                "label": "Slider animation",
                "options": [
                    {
                    "value": "fade",
                    "label": "Fade"
                    },
                    {
                    "value": "slide",
                    "label": "Slide"
                    },
                    {
                    "value": "loop",
                    "label": "Loop"
                    }
                ],
                "default": "slide"
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding Bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "header",
                        "content": "Media options"
                    },
                    {
                        "type": "image_picker",
                        "id": "desktop_image",
                        "label": "Desktop Image",
                        "info": "Recommended size: 1360 X 633 px"
                    },
                    {
                        "type": "image_picker",
                        "id": "mobile_image",
                        "label": "Mobile Image",
                        "info": "Recommended size: 360 X 282 px"
                    },
                    {
                        "type": "header",
                        "content": "Text customization"
                    },
                    {
                        "type": "text",
                        "id": "pre_heading",
                        "label": "Pre heading",
                        "default": "Women's Apperels"
                    },
                    {
                        "type": "richtext",
                        "id": "pre_text",
                        "label": "Pre heading",
                        "default": "<p>Women's Apperels</p>"
                    },
                    {
                        "type": "text",
                        "id": "button_label",
                        "label": "Button label",
                        "default": "Explore more"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button link"
                    },
                    {
                        "type": "header",
                        "content": "Content align customization"
                    },
                    {
                        "type": "select",
                        "id": "Desktop_content_position",
                        "label": "Desktop content position",
                        "options": [
                            {
                            "value": "top-left",
                            "label": "Top left"
                            },
                            {
                            "value": "top-center",
                            "label": "Top center"
                            },
                            {
                            "value": "top-right",
                            "label": "Top right"
                            },
                            {
                            "value": "center-left",
                            "label": "center left"
                            },
                            {
                            "value": "center-center",
                            "label": "center center"
                            },
                            {
                            "value": "center-right",
                            "label": "center right"
                            },
                            {
                            "value": "bottom-left",
                            "label": "bottom left"
                            },
                            {
                            "value": "bottom-center",
                            "label": "bottom center"
                            },
                            {
                            "value": "bottom-right",
                            "label": "bottom right"
                            }
                        ],
                        "default": "center-center"
                    },
                    {
                        "type": "select",
                        "id": "text_alignment_mobile",
                        "label": "text_alignment_mobile",
                        "options": [
                          {
                            "value": "left",
                            "label": "Left"
                          },
                          {
                            "value": "center",
                            "label": "Center"
                          },
                          {
                            "value": "right",
                            "label": "Right"
                          }
                        ],
                        "default": "center"
                      }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom slideshow",
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
